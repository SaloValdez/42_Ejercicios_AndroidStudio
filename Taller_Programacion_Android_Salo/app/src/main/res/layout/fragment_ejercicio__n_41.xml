<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.salo.app.salomonvaldez.com.taller_programacion_android_salo.Ejercicio_N_41">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/borde_linerlayout"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="Compra de Automovil Segun Devaluacion"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/borde_linerlayout"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/borde_edittext"

                    android:paddingBottom="4dp"
                    android:layout_weight="0.35"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingrese costo\n (Auto/Terreno)\n "
                        android:textAlignment="center"
                        android:paddingBottom="4dp"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/txtCosto"

                        android:background="@drawable/borde_edittext"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/borde_edittext"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:layout_margin="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingrese tasa\n devaluacion \n Coche \n (Mensual)"
                        android:textAlignment="center"
                        android:paddingBottom="4dp"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/txtDevaluacionCoche"

                        android:background="@drawable/borde_edittext"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/borde_edittext"
                    android:layout_margin="3dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingrese tasa\n valuacion \n Terreno \n (Mensual)"
                        android:textAlignment="center"
                        android:paddingBottom="4dp"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/txtValuacionTerreno"

                        android:background="@drawable/borde_edittext"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcular"
                    android:id="@+id/btnCalcularCompra"
                    android:layout_weight="0.52" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:background="@drawable/borde_edittext"
                    android:textStyle="bold"
                    android:layout_weight="2.80"
                    android:id="@+id/tvResultadoCompra"
                    android:textSize="15dp"/>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</FrameLayout>
